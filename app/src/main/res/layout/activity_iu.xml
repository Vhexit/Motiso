<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iu">

    <EditText
        android:id="@+id/m_edtcloth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:hint="cloth"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/m_edtname"
        app:layout_constraintTop_toBottomOf="@+id/m_edtname" />

    <EditText
        android:id="@+id/m_edttype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="type of cloth"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/m_edtcloth"
        app:layout_constraintTop_toBottomOf="@+id/m_edtcloth" />

    <EditText
        android:id="@+id/m_edtsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Enter your size"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="@+id/m_edttype"
        app:layout_constraintTop_toBottomOf="@+id/m_edttype" />

    <EditText
        android:id="@+id/m_edtname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="110dp"
        android:ems="10"
        android:hint="Your name"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="50dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="@+id/m_edtsize"
        app:layout_constraintTop_toBottomOf="@+id/m_edtsize" />
</androidx.constraintlayout.widget.ConstraintLayout>